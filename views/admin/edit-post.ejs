<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=POST" method="POST" enctype="multipart/form-data">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title"
    value="<%= data.title %>">

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>
  <div>
    <label for="image"><b>Image</b></label>
  </div>

  <div>
    <input type="file" name="imageURL">
  </div>
  
  <% if (data.imageURL) { %>
    <img src="/images/<%= data.imageURL %>" alt="Image" style="width: 500px; margin-top: 10px;">
  <% } %>

  <div style="margin-top: 10px;">
    <input type="submit" value="Update" class="btn">
  </div>

</form>